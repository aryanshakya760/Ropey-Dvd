@model RopayDvd.Models.DvdCopy

@{
    ViewData["Title"] = "Create DVD Copy";
}

<h4>@ViewBag.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DvdNumber" class="control-label"></label>
                <select asp-for="DvdNumber" class ="form-control" asp-items="ViewBag.DvdNumber"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-light" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-light">Go Back</a>
</div>


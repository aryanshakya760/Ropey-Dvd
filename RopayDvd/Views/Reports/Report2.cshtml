@model IEnumerable<RopayDvd.Models.CastMember>

@{
    ViewData["Title"] = "DVD Stock Count";
}

<h4 class="text-white text-center">@ViewBag.Title</h4>
<div class="row ">
    <div class="col-sm-4 h5 text-white">Actor Last Name:</div>
    <div class="col-sm-6 mb-4">
        <form asp-action="Report2">
            <select name="SelectedActorId" asp-items="@ViewBag.ActorList" class="form-control" onchange="this.form.submit();">
                <option value="0">Select Actor</option>
            </select>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th class="text-white h4">
                DVD Title
            </th>
            <th class="text-white h4">
                Stock Count
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.DvdNumberNavigation.DvdTite)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.DvdNumberNavigation.DvdCopies.Count)
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<RopayDvd.Models.MembershipCategory>

@{
    ViewData["Title"] = "Membership Category";
}

<h4 class="text-white h4">@ViewBag.Title</h4>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-white h5">
                @Html.DisplayNameFor(model => model.MembershipCategoryDescription)
            </th>
            <th class="text-white h5">
                @Html.DisplayNameFor(model => model.MembershipCategoryTotalLoans)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.MembershipCategoryDescription)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.MembershipCategoryTotalLoans)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MembershipCategoryNumber">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.MembershipCategoryNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
